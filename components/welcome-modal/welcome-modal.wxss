/* welcome-modal组件样式 */
.welcome-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9999;
  /* 防止点击穿透到下层元素 */
  pointer-events: auto;
  /* 防止背景页面滚动 */
  overflow: hidden;
}

/* 防止背景页面滚动的额外样式 */
page {
  overflow: hidden;
}

.modal-content {
  width: 85%;
  max-height: 80vh;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 36rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  text-align: center;
}

.logo-container {
  width: 120rpx;
  height: 120rpx;
  margin: 0 auto 24rpx;
}

.logo {
  width: 100%;
  height: 100%;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.description {
  font-size: 26rpx;
  line-height: 1.5;
  color: #666;
  margin-bottom: 36rpx;
  text-align: left;
  white-space: pre-wrap;
  /* 限制描述文本长度，使其更紧凑 */
  max-height: 40vh;
  overflow-y: auto;
}

.confirm-btn {
  background-color: #2c3e50;
  color: #fff;
  border-radius: 8rpx;
  font-size: 32rpx;
  padding: 18rpx 0;
  margin-top: 16rpx;
}

/* 禁用默认按钮样式 */
.confirm-btn::after {
  border: none;
}