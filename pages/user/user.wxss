/* pages/user/user.wxss */
.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f8f8f8;
}

/* 未登录状态 */
.user-container {
  margin-top: 30px;
  flex: 1;
}

.avatar-container {
  display: flex;
  justify-content: center;
  padding: 80rpx 0 40rpx;
}

.avatar-container .avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background-color: #f0f0f0;
}

.login-btn {
  text-align: center;
  padding: 20rpx 0;
  margin: 0 40rpx;
  background-color: #07c160;
  color: #fff;
  border-radius: 8rpx;
  font-size: 32rpx;
}

.tips {
  text-align: center;
  margin-top: 30rpx;
  font-size: 28rpx;
  color: #999;
}

/* 已登录状态 */
.profile-header {
  display: flex;
  align-items: center;
  padding: 40rpx;
  background-color: #fff;
  margin-bottom: 30rpx;
}

.profile-header .avatar-wrapper {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  background-color: #f0f0f0;
}

.profile-header .avatar {
  width: 100%;
  height: 100%;
}

.user-info {
  flex: 1;
  margin-left: 30rpx;
}

.profile-header .username {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
}

.edit-hint {
  font-size: 28rpx;
  color: #999;
}

.arrow-right {
  width: 30rpx;
  height: 30rpx;
}

/* 我的音乐区域 */
.music-section {
  background-color: #fff;
  margin-bottom: 30rpx;
  border-radius: 15px;
}


.music-item {
  display: flex;
  align-items: center;
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.item-icon {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 30rpx;
}

.item-icon image {
  width: 40rpx;
  height: 40rpx;
}

.item-text {
  flex: 1;
  font-size: 32rpx;
  color: #333;
}

.item-arrow {
  width: 30rpx;
  height: 30rpx;
}

.item-arrow image {
  width: 100%;
  height: 100%;
  opacity: 0.6;
}

/* 退出登录按钮 */
.logout-section {
  padding: 0 40rpx 40rpx;
}

.logout-btn {
  background-color:tomato;
  color: #fff;
  font-size: 32rpx;
  border-radius: 15px;
}

/* 底部版权信息 */
.copyright {
  padding: 40rpx 0;
  text-align: center;
}

.copyright-text {
  font-size: 28rpx;
  color: #999;
}