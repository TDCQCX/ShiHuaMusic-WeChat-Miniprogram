/* user-edit.wxss */
.container {
  padding: 40rpx;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f7f7f7;
}

.edit-form {
  background-color: #fff;
  padding: 40rpx;
  border-radius: 25rpx;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.1);
  max-width: 650rpx;
  margin: 0 auto;
  width: 100%;
}

/* 标题样式调整 */
.title {
  text-align: center;
  margin-bottom: 20rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.form-subtitle {
  color: #666;
  margin-bottom: 35rpx;
  font-size: 28rpx;
  text-align: center;
}

/* 头像样式 */
.avatar-section {
  margin-top: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}

.avatar-wrapper {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-bottom: 20rpx;
  border: 3rpx solid #e0e0e0;
  transition: border-color 0.3s;
}

.avatar-wrapper:active {
  border-color: #2a68fa;
}

.avatar {
  width: 100%;
  height: 100%;
  background-color: #e0e0e0;
}

.avatar-edit-icon {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  text-align: center;
  padding: 10rpx;
  font-size: 28rpx;
}

.avatar-hint {
  font-size: 28rpx;
  color: #666;
}

/* 表单样式 */
.form-group {
  margin-bottom: 25rpx;
}

.input-wrapper {
  display: flex;
  align-items: center;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  height: 90rpx;
  background-color: #fff;
}

/* 提示信息样式 */
.hint-message {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
  margin-left: 20rpx;
}

.input-wrapper:focus-within {
  border-color: #2a68fa;
  box-shadow: 0 0 0 3rpx rgba(42, 104, 250, 0.1);
}

.input-icon {
  font-size: 28rpx;
  color: #666;
  margin-right: 20rpx;
  white-space: nowrap;
  min-width: 100rpx;
  text-align: right;
}

.textarea-wrapper {
  display: flex;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 10rpx 20rpx;
  background-color: #fff;
  min-height: 140rpx;
  align-items: flex-start;
}

.textarea-wrapper:focus-within {
  border-color: #2a68fa;
  box-shadow: 0 0 0 3rpx rgba(42, 104, 250, 0.1);
}

.textarea-icon {
  margin-top: 20rpx;
  align-self: flex-start;
}

.error-message {
  color: #f56c6c;
  font-size: 24rpx;
  margin-top: 10rpx;
  display: block;
}

.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}




/* 底部版权信息 */
.copyright {
  margin-top: 40rpx;
  text-align: center;
}