/* login.wxss */
.container {
  margin-top: -50px;
  padding: 40rpx;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  background-color: #f7f7f7;
}

.login-form {
  background-color: #fff;
  padding: 50rpx;
  border-radius: 20rpx;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.1);
  max-width: 650rpx;
  margin: 0 auto;
  width: 100%;
}

.logo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.logo image {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.form-subtitle {
  color: #666;
  margin-bottom: 35rpx;
  font-size: 28rpx;
  text-align: center;
}

.form-group {
  margin-bottom: 25rpx;
}

.input-wrapper {
  display: flex;
  align-items: center;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  height: 90rpx;
  background-color: #fff;
}

.input-wrapper:focus-within {
  border-color: #2a68fa;
  box-shadow: 0 0 0 3rpx rgba(42, 104, 250, 0.1);
}

.input-icon {
  font-size: 32rpx;
  color: #999;
  margin-right: 20rpx;
}

.error-message {
  color: #f56c6c;
  font-size: 24rpx;
  margin-top: 10rpx;
  display: block;
}


.link-text {
  color: #2a68fa;
  font-size: 26rpx;
  text-decoration: none;
}

.link-text:active {
  text-decoration: underline;
}

.signup-text {
  text-align: center;
  margin-top: 30rpx;
  color: #666;
  font-size: 26rpx;
}

.signup-text .link-text {
  font-weight: 600;
}

.wechat-login {
  margin-top: 40rpx;
}

.divider-text {
  color: #999;
  font-size: 24rpx;
  text-align: center;
  margin: 30rpx 0;
}

.mt-40 {
  margin-top: 40rpx;
}