/* my-favorites.wxss */
.container {
  min-height: 100vh;
  background-color: #f8f8f8;
}

/* 页面标题 */
.page-header {
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 内容区域 */
.content-area {
  padding: 20rpx;
}

/* 歌曲列表 */
.song-list {
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}

.song-item {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.song-item:last-child {
  border-bottom: none;
}

.song-index {
  font-size: 28rpx;
  color: #999;
  width: 60rpx;
  text-align: center;
}

.song-info {
  flex: 1;
  margin-left: 20rpx;
}

.song-name {
  font-size: 32rpx;
  color: #333;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.song-artist {
  font-size: 24rpx;
  color: #999;
  line-height: 1.5;
}

.song-duration {
  font-size: 24rpx;
  color: #999;
  margin-right: 20rpx;
}

.song-more {
  width: 44rpx;
  height: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.song-more image {
  width: 28rpx;
  height: 28rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin-top: 30rpx;
}

.empty-subtext {
  font-size: 28rpx;
  color: #ccc;
  margin-top: 10rpx;
}