<!-- my-favorites.wxml -->
<view class="container">
  <!-- 页面标题 -->
  <view class="page-header">
    <view class="header-title">我的喜欢</view>
  </view>

  <!-- 内容区域 -->
  <view class="content-area">
    <view wx:if="{{songs.length > 0}}">
      <view class="song-list">
        <view wx:for="{{songs}}" wx:key="songId" class="song-item" bindtap="playSong" data-id="{{item.songId}}">
          <view class="song-index">{{index + 1}}</view>
          <view class="song-info">
            <text class="song-name">{{item.songName}}</text>
            <text class="song-artist">{{item.artistName}}</text>
          </view>
          <view class="song-duration">{{item.duration}}</view>
        </view>
      </view>
    </view>
    <view wx:else class="empty-state">
      <image class="empty-icon" src="/assets/icons/收藏.png" mode="aspectFit"></image>
      <text class="empty-text">暂无收藏歌曲</text>
      <text class="empty-subtext">收藏的歌曲会显示在这里</text>
    </view>
  </view>

  <!-- 底部版权信息 -->
  <copyright/>
</view>

<!-- 底部播放器组件 -->
<player />