/* index.wxss */
.container {
  padding-bottom: 60rpx; /* 底部安全区域 */
}

/* 轮播图样式 */
.banner-container {
  position: relative;
  width: 100%;
  height: 300rpx;
  overflow: hidden;
  margin-top: 10rpx; /* 缩短与顶部的距离 */
  border-radius: 10%;
}

.t-swiper {
  width: 100%;
  height: 100%;
}

.banner-image {
  width: 100%;
  height: 100%;
  display: block;
}

/* 通用区域样式 */
.section {
  margin-top: 20rpx;
  background-color: #ffffff;
  padding: 30rpx 20rpx;
  border-radius: 4%;
}
.section-list{
  margin-top: 30rpx;
  background-color: #ffffff;
  padding: 30rpx 20rpx;
  border-radius: 20px;
}

.section-header {
  margin-top: -20px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.more {
  font-size: 28rpx;
  color: #999999;
}

/* 歌单网格样式 */
.playlist-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.playlist-item {
  width: 23%; /* 调整为四列布局 */
  margin-bottom: 25rpx;
}

.playlist-cover {
  width: 100%;
  height: 200rpx; /* 直接设置固定高度 */
  border-radius: 10%;
  margin-bottom: 2rpx;
}

.playlist-title {
  font-size: 24rpx;
  color: #333333;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 1.2;
  height: 30rpx;
}

/* 歌曲列表样式 */
.song-list {
  display: flex;
  flex-direction: column;
}

.song-item {
  display: flex;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.song-cover {
  width: 100rpx;
  height: 100rpx;
  border-radius: 8rpx;
}

.song-info {
  flex: 1;
  margin-left: 20rpx;
  overflow: hidden;
}

.song-name {
  font-size: 32rpx;
  color: #333333;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 8rpx;
}

.song-artist {
  font-size: 28rpx;
  color: #999999;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.song-duration {
  font-size: 26rpx;
  color: #999999;
  margin-left: 10rpx;
}