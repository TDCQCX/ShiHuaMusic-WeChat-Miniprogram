/* my-playlists.wxss */
.container {
  min-height: 100vh;
  background-color: #f8f8f8;
}

/* 页面标题 */
.page-header {
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 内容区域 */
.content-area {
  padding: 20rpx;
}

/* 新建歌单按钮 */
.playlist-create {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.create-icon {
  width: 60rpx;
  height: 60rpx;
  background-color: #f0f0f0;
  border-radius: 10rpx;
  padding: 10rpx;
}

.create-text {
  font-size: 32rpx;
  color: #333;
  margin-left: 20rpx;
  flex: 1;
}

/* 歌单列表 */
.playlist-list {
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}

.playlist-item {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
  position: relative;
}

.playlist-item:last-child {
  border-bottom: none;
}

.playlist-cover {
  width: 140rpx;
  height: 140rpx;
  border-radius: 10rpx;
}

.playlist-info {
  flex: 1;
  margin-left: 20rpx;
  min-width: 0; /* 确保文本内容不会溢出 */
}

.playlist-name {
  font-size: 32rpx;
  color: #333;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.playlist-count {
  font-size: 24rpx;
  color: #999;
  line-height: 1.5;
}

.playlist-arrow {
  width: 30rpx;
  height: 30rpx;
  opacity: 0.5;
  margin-right: 20rpx;
}

.playlist-more {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.playlist-more image {
  width: 30rpx;
  height: 30rpx;
  opacity: 0.5;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin-top: 30rpx;
}

.empty-subtext {
  font-size: 28rpx;
  color: #ccc;
  margin-top: 10rpx;
}