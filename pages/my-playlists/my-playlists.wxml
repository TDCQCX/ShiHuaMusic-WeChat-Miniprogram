<!-- my-playlists.wxml -->
<view class="container">
  <!-- 页面标题 -->
  <view class="page-header">
    <view class="header-title">我的歌单</view>
  </view>

  <!-- 内容区域 -->
  <view class="content-area">
    <!-- 新建歌单按钮 -->
    <view class="playlist-create" bindtap="createPlaylist">
      <image class="create-icon" src="/assets/icons/add.svg" mode="aspectFit"></image>
      <view class="create-text">新建歌单</view>
    </view>
    
    <!-- 歌单列表 -->
    <view class="playlist-list">
      <view wx:for="{{playlists}}" wx:key="playlistId" class="playlist-item" bindtap="navigateToPlaylist" data-id="{{item.playlistId}}">
        <image class="playlist-cover" src="{{item.coverUrl}}" mode="aspectFill"></image>
        <view class="playlist-info">
            <text class="playlist-name">{{item.playlistName || item.title || item.name || '未知歌单'}}</text>
            <text class="playlist-count">{{item.songCount || item.trackCount || item.count || 0}} 首歌曲</text>
          </view>
      </view>
    </view>
    
    <!-- 空状态 -->
    <view wx:if="{{playlists.length === 0}}" class="empty-state">
      <image class="empty-icon" src="/assets/icons/playlist.svg" mode="aspectFit"></image>
      <text class="empty-text">暂无歌单</text>
      <text class="empty-subtext">点击上方按钮创建新歌单</text>
    </view>
  </view>

  <!-- 底部版权信息 -->
  <copyright/>
</view>

<!-- 底部播放器组件 -->
<player />