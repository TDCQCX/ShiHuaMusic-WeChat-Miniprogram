/* like.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 130rpx;
}

.header {
  padding: 30rpx;
  background-color: #ffffff;
  border-bottom: 2rpx solid #f0f0f0;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
}

.song-list {
  background-color: #ffffff;
  margin-top: 20rpx;
}

.song-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.song-item:last-child {
  border-bottom: none;
}

.song-index {
  width: 60rpx;
  font-size: 32rpx;
  color: #999999;
  text-align: center;
}

.song-info {
  flex: 1;
  margin-left: 20rpx;
}

.song-name {
  display: block;
  font-size: 34rpx;
  color: #333333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.song-artist {
  display: block;
  font-size: 28rpx;
  color: #999999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.song-actions {
  display: flex;
  align-items: center;
}

.like-btn {
  width: 48rpx;
  height: 48rpx;
  background-image: url(/assets/icons/点赞.png);
  background-size: contain;
  background-repeat: no-repeat;
  margin-right: 30rpx;
}

.like-btn.active {
  background-image: url(/assets/icons/点赞_块.png);
}

.more-btn {
  width: 48rpx;
  height: 48rpx;
  background-image: url(/assets/icons/更多.png);
  background-size: contain;
  background-repeat: no-repeat;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
}

.empty-text {
  font-size: 34rpx;
  color: #333333;
  margin-bottom: 20rpx;
}

.empty-subtext {
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 60rpx;
}

.go-discover-btn {
  background-color: #1677FF;
  color: #ffffff;
  font-size: 32rpx;
  line-height: 96rpx;
  border-radius: 48rpx;
  padding: 0 80rpx;
}

.go-discover-btn::after {
  border: none;
}