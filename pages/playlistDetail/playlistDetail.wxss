/* pages/playlistDetail/playlistDetail.wxss */
.container {
  width: 100%;
  min-height: 100vh;
  background-color: #f8f8f8;
  padding-bottom: 60rpx; /* 为底部播放器留出空间 */
  box-sizing: border-box;
}

/* 错误提示条 */
.error-bar {
  background-color: #fff3cd;
  color: #856404;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
  border-bottom: 2rpx solid #ffeaa7;
}

.error-bar-text {
  font-size: 28rpx;
  flex: 1;
  margin-right: 20rpx;
}

.retry-bar-btn {
  font-size: 26rpx;
  background-color: #ffc107;
  color: white;
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  min-width: 100rpx;
}

/* 加载动画 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 8rpx solid #f3f3f3;
  border-top: 8rpx solid #38a1f3;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

/* 错误提示 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
  padding: 40rpx;
}

.error-text {
  font-size: 32rpx;
  color: #e74c3c;
  margin-bottom: 40rpx;
  text-align: center;
}

.retry-btn {
  background-color: #38a1f3;
  color: white;
  font-size: 28rpx;
  padding: 12rpx 40rpx;
  border-radius: 40rpx;
}

/* 歌单内容区域 */
.playlist-content {
  width: 100%;
  height: calc(100vh - 60rpx);
}

/* 歌单信息区域 */
.playlist-info {
  background-color: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.playlist-header {
  display: flex;
  margin-bottom: 30rpx;
}

.cover-image {
  width: 240rpx;
  height: 240rpx;
  border-radius: 20rpx;
  margin-right: 30rpx;
}

.playlist-meta {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.playlist-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  line-height: 1.4;
}

.playlist-stats {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.creator-info {
  display: flex;
  align-items: center;
}

.creator-avatar {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.creator-name {
  font-size: 26rpx;
  color: #888;
}

/* 歌单描述 */
.playlist-description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 20rpx;
  white-space: pre-wrap;
}

/* 标签 */
.playlist-tags {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 30rpx;
}

.tag-item {
  background-color: #f0f7ff;
  color: #38a1f3;
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  margin-right: 20rpx;
  margin-bottom: 15rpx;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 0;
  border-radius: 40rpx;
  font-size: 28rpx;
  position: relative;
  background-color: #f5f5f5;
  color: #333;
}

.action-btn.primary {
  background-color: #38a1f3;
  color: white;
}

.btn-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

/* 标签页容器 */
.tab-container {
  background-color: white;
  margin-bottom: 20rpx;
}

.tabs {
  display: flex;
  border-bottom: 1rpx solid #e0e0e0;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 30rpx 0;
  font-size: 30rpx;
  color: #666;
  position: relative;
}

.tab.active {
  color: #38a1f3;
  font-weight: bold;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 30%;
  width: 40%;
  height: 4rpx;
  background-color: #38a1f3;
  border-radius: 2rpx;
}

/* 标签页内容 */
.tab-content {
  background-color: white;
  min-height: 400rpx;
}

/* 歌曲列表 */
.songs-list {
  padding: 0 30rpx;
}

.song-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.song-index {
  width: 60rpx;
  font-size: 28rpx;
  color: #888;
  text-align: center;
}

.song-info {
  flex: 1;
  margin-right: 20rpx;
  overflow: hidden;
}

.song-name {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 8rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.song-meta {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #888;
}

.artist-name {
  margin-right: 20rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.album-name {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.song-duration {
  font-size: 26rpx;
  color: #888;
  width: 80rpx;
  text-align: right;
}

.empty-list {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 300rpx;
  font-size: 28rpx;
  color: #999;
}

/* 评论区 */
.comment-input-container {
  display: flex;
  padding: 20rpx 30rpx;
  background-color: white;
  border-bottom: 1rpx solid #f0f0f0;
}

.comment-input {
  flex: 1;
  height: 60rpx;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  color: #333;
  margin-right: 20rpx;
}

.send-btn {
  height: 60rpx;
  min-width: 120rpx;
  background-color: #38a1f3;
  color: white;
  font-size: 28rpx;
  line-height: 60rpx;
  padding: 0 30rpx;
  border-radius: 30rpx;
}

.send-btn[disabled] {
  background-color: #ccc;
  color: #999;
}

.char-count {
  font-size: 24rpx;
  color: #999;
  text-align: right;
  padding: 0 30rpx 10rpx;
  background-color: white;
}

/* 评论列表 */
.comments-list {
  padding: 20rpx 30rpx;
}

.comment-item {
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.comment-header {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.user-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.comment-meta {
  flex: 1;
}

.username {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 5rpx;
  display: block;
}

.comment-time {
  font-size: 24rpx;
  color: #999;
}

.comment-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 15rpx;
  word-break: break-all;
}

.comment-actions {
  display: flex;
  align-items: center;
}

.like-action {
  display: flex;
  align-items: center;
  margin-right: 40rpx;
  font-size: 26rpx;
  color: #888;
}

.like-icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 8rpx;
}

.like-count {
  font-size: 26rpx;
}

.delete-action {
  font-size: 26rpx;
  color: #e74c3c;
}

.empty-comments {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 300rpx;
  font-size: 28rpx;
  color: #999;
}

/* 适配底部安全区域 */
@media screen and (min-height: 812px) {
  .container {
    padding-bottom: 100rpx;
  }
  
  .playlist-content {
    height: calc(100vh - 100rpx);
  }
}